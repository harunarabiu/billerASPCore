@model FirstApp.Models.ViewModels.PaymentRequest
@using Microsoft.AspNetCore.Hosting
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@{
    Layout = "_Layout";
}
@section Title {
    <title>Biller.ng - Welcome </title>
}
@section Style {
    <style>
        .xloader {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            height: 70px;
            display: flex;
            justify-content: center;
            width: 100%;
            height: 100%;
            background-color: hsla(0, 100%, 100%, 0.5)
        }

        .hero {
            background: #e0e8f9;
        }

        .landing {
            background-image: url(/css/cool-background.svg);
        }

        .footer.footer-dark {
            background: #3E4095;
            color: #fff;
        }

        .columns {
            margin-top: 35px;
        }

        .footer-logo > img {
            height: 40px;
        }

        .footer-column .footer-header h3 {
            font-weight: 500;
            font-size: 1.2rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 20px;
        }

        .link-list {
            line-height: 40px;
            font-size: 1.1rem;
        }

            .link-list a {
                color: #98a9c3;
                font-weight: 400;
                transition: all 0.5s;
            }

            .link-list:hover {
                color: #fcfcfc;
            }

        .level-item .icon {
            color: #F39200;
            transition: all 0.5s;
        }

        .level-item:hover {
            color: #fcfcfc;
        }

        .footer {
            padding: 1rem 1rem 3rem;
        }

        .success-icon {
            color: green;
            font-size: 80px;
        }

        .token {
            font-size: 20px;
            font-weight: 800;
        }

        .icon-danger {
            fill: hsl(348, 100%, 61%);
        }

        .icon-secondary {
            fill: #fff;
        }

        .icon-success {
            fill: green;
        }

        .icon-white {
            fill: #fff;
        }

        .icon-pending {
            fill: #3E4095;
        }

        .icon-x10 {
            height: 10rem;
        }

        .loadercontainer {
            display: block;
        }

        .animatewrapper {
            margin-top: -50px;
        }

        .animate {
            width: 60%;
        }

        .optional {
            font-style: italic;
            font-weight: lighter;
        }
    </style>
}

<section class="hero">
    <div class="hero-body">
        <div class="container">
            <div class="columns is-vcentered">
