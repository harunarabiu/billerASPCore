                                                    <select asp-for="PaymentPlan" id="PaymentPlan">
                                                        <option value="">Select Account Type</option>
                                                        <option value="prepaid">Prepaid</option>
                                                        <option value="postpaid">Postpaid</option>
                                                    </select>
                                                </div>
                                            </div>
